{
  "compilerOptions": {
    "baseUrl": "",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@services/*": ["app/Services/*"],
      "@models/*": ["app/models/*"],
      "@components/*": ["app/components/*"],
      "@pipe/*": ["app/pipe/*"],
      "@utils/*": ["app/utils/*"],
      "@shared/*": ["app/shared/*"],
      "@directive/*": ["app/directive/*"]
    },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
